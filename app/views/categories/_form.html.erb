<%#= para js se cambia el local: true por el remote: true %>
<%= form_with(model: @category, remote: true) do |f| %>
    <% if @category.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este tipo no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @category.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-group' %>
    </div>
    <div class="form-group">
        <%= f.label :public %>
        <%= f.check_box :public, class: 'form-group' %>
    </div>
    <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, @categories, :id, :title, include_blank: true %>
    </div>
    
    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>
<br>