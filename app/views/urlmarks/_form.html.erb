<%= form_with(model: @urlmark, remote: true) do |f| %>
    <% if @urlmark.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este marcador no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @urlmark.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-group' %>
    </div>
    <div class="form-group">
        <%= f.label :type_format_id %>
        <%= f.collection_select :type_format_id, @type_formats, :id, :title, include_blank: true %>
        <%#= f.select :type_format_id, options_from_collection_for_select(TypeFormat.all, :id, :title), include_blank: true, class: 'form-group'  %>
    </div>
    <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, @categories, :id, :title, include_blank: true %>
    </div>
    
    <div id="create-button" class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>
<br>